<h1>Edit the post</h1>
<div>
  <form>
    <div class="form-group">
      <label for="title">Post Title</label>
      {{input value=title id="title"}}
    </div>
    <div class="form-group">
      <label for="story">Post Content</label>
      {{input value=story id="story"}}
    </div>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author"}}
    </div>
    <div class="form-group">
      <label for="date">Date</label>
      {{input value=date id="date"}}
    </div>
    <button {{action 'update' post}}>Update</button>
  </form>

</div>
